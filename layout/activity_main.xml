<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/mainTitle"
        android:layout_width="320dp"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:scaleType="fitXY"
        android:src="@drawable/maintitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainGraphic"
        android:layout_below="@+id/mainTitle"        
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/rate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_rate_main" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button_share_main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/verticalBtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/play"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:background="@drawable/button_play_main" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_settings_main" />

            <ImageButton
                android:id="@+id/exit"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_exit_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/leaderboard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_leaderboard_main" />

            <ImageButton
                android:id="@+id/sound"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/button_sound_on_main" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mainGraphic"
        android:layout_width="264dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/AHGroup"
        android:scaleType="fitXY"
        android:src="@drawable/receh_banget" />

    <TextView
        android:id="@+id/AHGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_h_grup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
